<%= form_with url: "/companies/#{@company.id}/snowboards", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :powder_board %>
  <%= form.text_field :powder_board %>
  <%= form.label :length %>
  <%= form.text_field :length %>
  <%= form.submit %>
<% end %>